<manifest xmlns:android="http://schemas.android.com/apk/res/android"
        package="com.example.techtrain.railway.android">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
            android:name=".RailwayApplication"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:theme="@style/Theme.Railway">
        <activity
                android:name=".activity.MainActivity"
                android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
                android:name=".activity.SigninActivity"
                android:exported="true">
        </activity>

        <activity
                android:name=".activity.LoginActivity"
                android:exported="true">
        </activity>

        <activity
                android:name=".activity.BookReviewActivity"
                android:exported="true">
        </activity>

        <activity
            android:name=".activity.UserInfoEditorActivity"
            android:exported="true">
        </activity>

        <activity
                android:name=".activity.ReviewPostActivity"
                android:exported="true">
        </activity>

        <activity
                android:name=".activity.BookDetailActivity"
                android:exported="true">
        </activity>

        <activity
                android:name=".activity.WebViewActivity"
                android:exported="true">
        </activity>

        <activity
                android:name=".activity.BookReviewEditorActivity"
                android:exported="true">
        </activity>

    </application>

</manifest>
